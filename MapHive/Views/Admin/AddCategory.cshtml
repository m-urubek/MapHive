@model MapHive.Models.RepositoryModels.CategoryCreate

@{
    ViewData["Title"] = "Add Category";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1>Add New Category</h1>
            <p class="text-muted">Create a new category for map locations.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="AddCategory" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Icon" class="form-label">Icon Name</label>
                            <div class="input-group">
                                <span class="input-group-text">bi-</span>
                                <input asp-for="Icon" class="form-control" placeholder="e.g. 'map', 'building', etc." />
                            </div>
                            <div class="form-text">Enter a Bootstrap Icons name (without the 'bi-' prefix).</div>
                            <span asp-validation-for="Icon" class="text-danger"></span>
                            <div class="mt-2">
                                <small><a href="https://icons.getbootstrap.com/" target="_blank">Browse available icons</a></small>
                            </div>
                        </div>

                        <div class="d-flex mt-4">
                            <a asp-action="Categories" class="btn btn-secondary me-2">Cancel</a>
                            <button type="submit" class="btn btn-primary">Create Category</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 