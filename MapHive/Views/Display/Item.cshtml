@model Dictionary<string, string>

@{
    ViewData["Title"] = $"{ViewBag.TableName} Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3>@ViewBag.TableName Details</h3>
                    <h5>Item ID: @ViewBag.ItemId</h5>
                </div>
                <div class="card-body">
                    @if (Model.Count > 0)
                    {
                        <partial name="_DisplayPage" model="Model" />
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            No data found for this item.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 