@model MapHive.Models.PageModels.ThreadCreatePageModel

@{
    ViewData["Title"] = "Start a Discussion";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3>Start a Discussion about @Model.LocationName</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="LocationName" />

                        <div class="mb-3">
                            <label asp-for="ThreadName" class="form-label">Discussion Title</label>
                            <input asp-for="ThreadName" class="form-control" placeholder="Enter a title for your discussion" />
                            <span asp-validation-for="ThreadName" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="InitialMessage" class="form-label">Initial Message</label>
                            <textarea asp-for="InitialMessage" class="form-control" rows="5" placeholder="Write your message here..."></textarea>
                            <span asp-validation-for="InitialMessage" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-controller="Map" asp-action="Details" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Start Discussion</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 